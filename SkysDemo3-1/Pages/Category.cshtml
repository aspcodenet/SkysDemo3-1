@page
@model SkysDemo3_1.Pages.CategoryModel
@{
}

<h3>Sidan @Model.CurrentPage</h3>

<table class="table">
    <thead>
    <tr><th>
            Namn
            <a asp-page="/Category" asp-route-categoryId="@Model.CategoryId" asp-route-sortColumn="ProductName" asp-route-sortOrder="asc">
                <i class="fa-solid fa-angle-up"></i>
            </a>
            <a asp-page="/Category" asp-route-categoryId="@Model.CategoryId" asp-route-sortColumn="ProductName" asp-route-sortOrder="desc">
                <i class="fa-solid fa-angle-down"></i>
            </a>
        </th>
        <th>
            Pris
            <a asp-page="/Category" asp-route-categoryId="@Model.CategoryId" asp-route-sortColumn="UnitPrice" asp-route-sortOrder="asc">
                <i class="fa-solid fa-angle-up"></i>
            </a>
            <a asp-page="/Category" asp-route-categoryId="@Model.CategoryId" asp-route-sortColumn="UnitPrice" asp-route-sortOrder="desc">
                <i class="fa-solid fa-angle-down"></i>
            </a>
        </th>
        <th>
            Antal i lager
            <a asp-page="/Category" asp-route-categoryId="@Model.CategoryId" asp-route-sortColumn="UnitsInStock" asp-route-sortOrder="asc">
                <i class="fa-solid fa-angle-up"></i>
            </a>
            <a asp-page="/Category" asp-route-categoryId="@Model.CategoryId" asp-route-sortColumn="UnitsInStock" asp-route-sortOrder="desc">
                <i class="fa-solid fa-angle-down"></i>
            </a>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Namn</td>
            <td>@item.UnitPrice</td>
            <td>@item.UnitsInStock</td>
            <td><a asp-page="/Supplier" asp-route-bajskorv="@item.Id" class="btn btn-primary">View</a></td>
        </tr>
    }
    <tr>
        <td> <a asp-page="/Category" asp-route-categoryId="@Model.CategoryId" 
                asp-route-sortColumn="@Model.SortColumn" asp-route-sortOrder="@Model.SortOrder"
                asp-route-pageno="@(Model.CurrentPage-1)"
             >Prev</a> </td>
        <td></td>
        <td></td>
        <td>
            
            
            <a asp-page="/Category" asp-route-categoryId="@Model.CategoryId" asp-route-sortColumn="@Model.SortColumn" asp-route-sortOrder="@Model.SortOrder" asp-route-pageno="@(Model.CurrentPage + 1)">Next</a>

        </td>
    </tr>
    </tbody>
</table>

